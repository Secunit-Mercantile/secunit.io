---
import "@/styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import ThemeToggle from "@/components/ThemeToggle.astro";

interface Props {
 title: string;
 description?: string;
 ogImage?: string;
}

const { 
 title, 
 description = "Enterprise-grade security, DevOps, SRE, and AI consulting for small and mid-sized businesses. Fractional senior expertise without the enterprise price tag.",
 ogImage = "/og-image.png"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
 <head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/png" href="/images/brand/icon.png" />
  <link rel="apple-touch-icon" href="/images/brand/icon.png" />
  <link rel="canonical" href={canonicalURL} />
  
  <!-- Primary Meta Tags -->
  <title>{title} | Secunit Mercantile</title>
  <meta name="title" content={`${title} | Secunit Mercantile`} />
  <meta name="description" content={description} />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={`${title} | Secunit Mercantile`} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL(ogImage, Astro.site)} />
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={canonicalURL} />
  <meta property="twitter:title" content={`${title} | Secunit Mercantile`} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={new URL(ogImage, Astro.site)} />
  
  <!-- Fonts - Inter for body, JetBrains Mono for code -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

  <!-- Theme script (dark mode by default for GoWipeMe aesthetic) -->
  <script is:inline>
   // GoWipeMe aesthetic defaults to dark mode
   const theme = (() => {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
     return localStorage.getItem('theme');
    }
    // Default to dark mode for the refined dark aesthetic
    return 'dark';
   })();

   if (theme === 'dark') {
    document.documentElement.classList.add('dark');
   } else {
    document.documentElement.classList.remove('dark');
   }
  </script>
 </head>
 <body class="min-h-screen flex flex-col">
  <Header />
  <main class="flex-1">
   <slot />
  </main>
  <Footer />
  <ThemeToggle />
 </body>
</html>
