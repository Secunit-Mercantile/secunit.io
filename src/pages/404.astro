---
import Base from "@/layouts/Base.astro";
---

<Base title="Page Not Found">
  <section class="section">
    <div class="container">
      <div class="mx-auto max-w-2xl text-center">
        <div class="mb-8 text-9xl font-bold text-primary/20 dark:text-darkmode-primary/20">
          404
        </div>
        <h1 class="text-3xl font-bold md:text-4xl">Page Not Found</h1>
        <p class="mt-4 text-body dark:text-darkmode-body">
          Sorry, we couldn't find the page you're looking for.
        </p>
        <a href="/" class="btn-primary mt-8">
          Back to Home
        </a>
      </div>
    </div>
  </section>
</Base>
