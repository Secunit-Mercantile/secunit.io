---
const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { label: "AI Enablement", href: "/services#ai-enablement" },
    { label: "DevOps & SRE", href: "/services#devops-sre" },
    { label: "Virtual CISO", href: "/services#virtual-ciso" },
  ],
  company: [
    { label: "About", href: "/about" },
    { label: "Contact", href: "/contact" },
  ],
  legal: [
    { label: "Privacy Policy", href: "/privacy" },
    { label: "Terms of Service", href: "/terms" },
  ],
};
---

<footer class="border-t border-border bg-gray-50 dark:border-darkmode-border dark:bg-gray-900">
  <div class="container section-sm">
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
      <!-- Brand -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center gap-2 text-xl font-bold text-dark dark:text-white">
          <svg class="h-8 w-8" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect width="32" height="32" rx="8" class="fill-primary dark:fill-darkmode-primary"/>
            <path d="M10 16L14 20L22 12" stroke="white" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span>Secunit</span>
        </a>
        <p class="mt-4 text-sm text-body dark:text-darkmode-body">
          Enterprise-grade security, DevOps, and AI consulting for growing businesses.
        </p>
        <!-- Social Links -->
        <div class="mt-6 flex gap-4">
          <a 
            href="https://linkedin.com/company/secunit-mercantile" 
            target="_blank"
            rel="noopener noreferrer"
            class="flex h-10 w-10 items-center justify-center rounded-lg bg-gray-200 text-body transition-colors hover:bg-primary hover:text-white dark:bg-gray-800 dark:text-darkmode-body dark:hover:bg-darkmode-primary"
            aria-label="LinkedIn"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a 
            href="https://github.com/Secunit-Mercantile" 
            target="_blank"
            rel="noopener noreferrer"
            class="flex h-10 w-10 items-center justify-center rounded-lg bg-gray-200 text-body transition-colors hover:bg-primary hover:text-white dark:bg-gray-800 dark:text-darkmode-body dark:hover:bg-darkmode-primary"
            aria-label="GitHub"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h4 class="mb-4 font-semibold text-dark dark:text-white">Services</h4>
        <ul class="space-y-3">
          {footerLinks.services.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-body hover:text-primary dark:text-darkmode-body dark:hover:text-darkmode-primary">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="mb-4 font-semibold text-dark dark:text-white">Company</h4>
        <ul class="space-y-3">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-body hover:text-primary dark:text-darkmode-body dark:hover:text-darkmode-primary">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="mb-4 font-semibold text-dark dark:text-white">Contact</h4>
        <ul class="space-y-3 text-sm text-body dark:text-darkmode-body">
          <li>
            <a href="mailto:hello@secunit.io" class="hover:text-primary dark:hover:text-darkmode-primary">
              hello@secunit.io
            </a>
          </li>
          <li>Charlotte, NC</li>
          <li class="text-xs text-gray-500 dark:text-gray-500">
            Remote-first — we work with clients nationwide
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 flex flex-col items-center justify-between gap-4 border-t border-border pt-8 md:flex-row dark:border-darkmode-border">
      <p class="text-sm text-gray-500 dark:text-gray-500">
        © {currentYear} Secunit Mercantile LLC. All rights reserved.
      </p>
      <div class="flex gap-6">
        {footerLinks.legal.map((link) => (
          <a href={link.href} class="text-sm text-gray-500 hover:text-primary dark:hover:text-darkmode-primary">
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
