---
import type { HTMLAttributes } from "astro/types";

type Props = Omit<HTMLAttributes<"label">, "for"> & {
 for: string;
};

const { for: forAttribute, class: className, ...rest } = Astro.props;
---

<label class:list={["text-foreground text-xs font-medium", className]} for={forAttribute} {...rest}>
 <slot />
</label>
