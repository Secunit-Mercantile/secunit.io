---
import AboutCard from "./AboutCard.astro";
import { type ComponentProps } from "astro/types";

// utils
import { getLocaleFromUrl } from "@/js/localeUtils";
import { getTranslatedData } from "@/js/translationUtils";

// data
const currLocale = getLocaleFromUrl(Astro.url);
const teamData = getTranslatedData("teamData", currLocale);
---

<section id="about-team" class="overflow-hidden py-24">
  <div class="site-container">
    <div class="mx-auto mb-20 text-center md:max-w-xl" data-mos="fade-up">
      <span class="badge">Zenith Card</span>
      <h2 class="h2">Meet Our Team</h2>
    </div>
    <div
      id="about-team-trigger"
      class="mb-10 grid grid-cols-1 gap-10 md:grid-cols-2 xl:grid-cols-3"
    >
      {
        teamData.map((teamMember, idx) => (
          <AboutCard
            {...teamMember}
            data-mos="fade-up"
            data-mos-anchor="#about-team-trigger"
            data-mos-delay={idx * 0.15 + 0.3}
          />
        ))
      }
    </div>
  </div>
</section>
