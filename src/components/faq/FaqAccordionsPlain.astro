---
/**
 * * FAQ section in accordions
 */

// components
import { Accordion, AccordionContent, AccordionItem, AccordionTrigger } from "./accordion";

// utils
import { getLocaleFromUrl } from "@/js/localeUtils";
import { getTranslatedData } from "@/js/translationUtils";

// data
const currLocale = getLocaleFromUrl(Astro.url);
const faqData = getTranslatedData("faqData", currLocale);
---

<section id="faq-accordions" class="py-16 md:py-28">
  <div class="site-container">
    <div class="mx-auto mb-16 text-center md:max-w-2xl" data-mos="fade-up">
      <span class="badge">Zenith Card</span>
      <h2 class="h1">FAQ</h2>
    </div>
    <div
      class="mx-auto mt-10 flex max-w-4xl flex-col gap-3"
      data-mos="fade-up"
      data-mos-delay="0.3"
    >
      <Accordion class="space-y-4" defaultValue="item-0">
        {
          faqData.map((faqItem, idx) => (
            <AccordionItem value={`item-${idx}`}>
              <AccordionTrigger>{faqItem.question}</AccordionTrigger>
              <AccordionContent class="markdown-content" details={faqItem.answer} />
            </AccordionItem>
          ))
        }
      </Accordion>
    </div>
  </div>
</section>
