---
import { Icon } from "astro-icon/components";

interface Props {
 name: string;
 url: string;
 icon: string;
}

const { name, url, icon } = Astro.props;
---

<a
 href={url}
 target="_blank"
 rel="noopener noreferrer"
 class="primary-focus text-foreground/80 hover:text-foreground transition-colors duration-200"
 aria-label={`Follow me on ${name}`}
>
 <Icon name={icon} class="size-7" />
</a>
